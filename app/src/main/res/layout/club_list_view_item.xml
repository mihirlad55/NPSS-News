<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="190dp"
            android:weightSum="1"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <ImageView
                android:layout_height="134dp"
                android:scaleType="centerCrop"
                android:layout_width="312dp"
                android:layout_marginStart="00dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/imageViewClub"
                app:srcCompat="@mipmap/soccer"
                android:layout_weight="0.04"/>
        <TextView
                android:text="Club Name"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClubName"
                android:textSize="25sp"
                android:textColor="#000"
                android:padding="5dp"
                android:background="#e7e7e7"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/male_icon"
            android:id="@+id/imageViewGender"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
    />

    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/textViewGrade"
            android:textColor="#000"
            android:textSize="32sp"
            android:textAlignment="center"
            android:text="12"
            android:background="#ffffff"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"/>


</RelativeLayout>