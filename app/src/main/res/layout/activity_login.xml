<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="mihir.npssnewsandroid.LoginActivity"
        android:background="@color/colorOffWhite">


        <ImageView
                app:srcCompat="@mipmap/npsslogoblue"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="@string/email"
                android:id="@+id/txtEmail"
                android:layout_marginTop="59dp" android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/password"
                android:id="@+id/txtPassword"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/txtEmail" android:layout_alignLeft="@+id/txtEmail"
                android:layout_alignStart="@+id/txtEmail"/>
        <Button
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_marginTop="31dp"
                android:onClick="Login"
                android:layout_below="@+id/txtPassword"
                android:layout_centerHorizontal="true"/>
</RelativeLayout>
